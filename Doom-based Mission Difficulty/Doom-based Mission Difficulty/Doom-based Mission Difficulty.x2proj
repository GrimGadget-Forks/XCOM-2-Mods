    <Folder Include="Config\" />
    <Folder Include="Content\" />
    <Folder Include="Localization\" />
    <Folder Include="Src\" />
    <Folder Include="Src\AvatarProjectInfluencesDifficulty\" />
    <Folder Include="Src\AvatarProjectInfluencesDifficulty\Classes\" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="Config\XComDoomDifficulty.ini">
      <SubType>Content</SubType>
    </Content>
    <Content Include="ReadMe.txt" />
    <Content Include="ModPreview.jpg" />
    <Content Include="Config\XComEditor.ini" />
    <Content Include="Config\XComEngine.ini" />
    <Content Include="Config\XComGame.ini" />
    <Content Include="Localization\XComGame.int" />
    <Content Include="Src\AvatarProjectInfluencesDifficulty\Classes\RM_DefaultMissionSources_TemplateExchanger.uc">
      <SubType>Content</SubType>
    </Content>
